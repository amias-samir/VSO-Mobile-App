<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoOverlay="true"
    sothree:umanoFlingVelocity="500"
    sothree:umanoPanelHeight="125dp"
    sothree:umanoShadowHeight="0dp"
    sothree:umanoParallaxOffset="150dp"
    sothree:umanoInitialState="collapsed"
    sothree:umanoScrollableView="@+id/recylcer_view_categories_detail"
    >

    <include layout="@layout/main_content_acitivity_main"/>

    <ViewSwitcher
        android:id="@+id/view_switcher_slide_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/main_content_sliding_layout"/>

        <include layout="@layout/list_sliding_layout"/>


    </ViewSwitcher>



</com.sothree.slidinguppanel.SlidingUpPanelLayout>