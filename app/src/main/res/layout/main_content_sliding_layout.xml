<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/drag_view_main_slider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="false"
    android:orientation="vertical">

    <com.github.zagum.expandicon.ExpandIconView
        android:id="@+id/expand_icon_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/white_to_transparent"
        android:visibility="gone" />

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/bnve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/cardview_light_background"
        app:elevation="1dp"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu_bottom_bar" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_data_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_large"
                android:gravity="center"
                android:text="@string/browse_data_categories"
                android:textColor="@android:color/black"
                android:textSize="@dimen/material_text_subhead" />

            <ImageView
                android:id="@+id/toggle_slide_panel_main_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/spacing_large"
                android:src="@drawable/ic_arrow_upward_black_24dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylcer_view_map_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWindowBackground" />


</LinearLayout>