<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="np.com.naxa.vso.activity.OpenSpaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|clip_horizontal"
        android:orientation="vertical"
        android:layout_margin="@dimen/spacing_xxxlarge">
    <TextView
        android:id="@+id/openspace_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OpenSpace Name"
        android:gravity="center"
        />

        <TextView
            android:layout_marginTop="@dimen/spacing_large"
            android:id="@+id/openspace_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenSpace Name"
            android:gravity="center"
            />

    </LinearLayout>
</RelativeLayout>
